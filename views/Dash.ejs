      <div class="ratingGraph">
        <canvas class="myChartClass" id="myChart"></canvas>
      </div>
      <div class="statContainer">
        <% U.stats.forEach(function(set,index){ %>
          <div style="background-image: url('../stat<%=backList[index]%>.png');" class="statBox">
