<div class="page-content page-container" id="page-content">
<div class="padding">
<div class="row container d-flex justify-content-center mx-auto">
<div class="col-xl-6 col-md-12">
<div class="card user-card-full">
<div class="row m-l-0 m-r-0">
<div class="col-sm-4 bg-c-lite-green user-profile">
  <div class="card-block text-center text-white">

          <div class="m-b-10">
               <% if(user.titlePhoto==="https://cdn-userpic.codeforces.com/no-title.jpg")user.titlePhoto="A"+ (Math.floor(Math.random() * 3)+1) +".png"; %>
              <img src="<%=user.titlePhoto%>" class="img-radius" alt="User-Profile-Image">
          </div>
          <h4 name="username" value="<%=user.handle%>" class="f-w-600"><%=user.handle%></h4>
          <p><%=(user.firstName)?user.firstName:''%> <%=(user.lastName)?user.lastName:''%></p>
          <% if(isFriend===1) {%>
            <form class="" action="/Home/removeFrd" method="post">
            <input type="hidden" name="F2" value="<%=user.handle%>">
            <input type="hidden" name="F1" value="<%=host.handle%>">
            <button onclick="submit" type="submit" class="FrdBTN"><i class="fa-solid fa-user-minus"></i></button>
            </form>
            <% }else if(isFriend===2){ %>
            <form class="" action="/Home" method="post">
              <input type="hidden" name="F2" value="<%=user.handle%>">
              <input type="hidden" name="F2image" value="<%=user.titlePhoto%>">
              <input type="hidden" name="F2rating" value="<%=user.rating%>">
              <input type="hidden" name="F1" value="<%=host.handle%>">
              <button onclick="submit" type="submit" class="FrdBTN"><i class="fa-solid fa-user-plus"></i></button>
          </form>
          <% } %>


        <!-- <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i> -->
    </div>
</div>
<div class="col-sm-8">
    <div class="card-block">
        <h6 class="m-b-20 p-b-5 b-b-default f-w-600 field">Information &ensp;<a target="_blank" href="<%="https://codeforces.com/profile/"+user.handle%>"><i class="ExtLink fa-solid fa-arrow-up-right-from-square"></i></a></h6>
        <div class="m-b-10 b-b-default row">
            <div class="col-sm-12">
                <p class="my-10 f-w-600 field">Rating</p>
                <h6 class="text-muted f-w-400 Fvalue"><%=(user.rating)?user.rating:"Not Available"%> &ensp;<%=(user.maxRating)?"(Max : "+ user.maxRating+")":""%></h6>
            </div>
        </div>
        <div class="m-b-10 b-b-default row">
            <div class="col-sm-12">
                <p class="my-10 f-w-600 field">Organization</p>
                <h6 class="text-muted f-w-400 Fvalue"><%=(user.organization)?user.organization:"Not Available"%></h6>
            </div>
        </div>
        <div class="m-b-10 b-b-default row">
            <div class="col-sm-12">
                <p class="my-10 f-w-600 field">Email</p>
                <h6 class="text-muted f-w-400 Fvalue"><%=(user.email)?user.email:"Not Available"%></h6>
            </div>
        </div>
        <div class="m-b-10 b-b-default row">
            <div class="col-sm-12">
                <p class="my-10 f-w-600 field">Rank</p>
                <h6 class="text-muted f-w-400 Fvalue"><%=(user.rank)?user.rank:"Not Ranked"%> &ensp;<%=(user.maxRank)?"(Max : "+ user.maxRank+")":""%>  </h6>
            </div>
        </div>
        <!-- <ul class="social-link list-unstyled m-t-40 m-b-10">
            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
            <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
        </ul> -->
    </div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
